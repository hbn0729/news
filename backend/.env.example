# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/news_db

# AI API Key (optional - AI filtering disabled if not set)
GLM_API_KEY=

# GNews API Key (optional - GNews collector disabled if not set)
GNEWS_API_KEY=

# App settings
APP_NAME=Financial News Aggregator
DEBUG=false

# Collection settings
COLLECTION_INTERVAL_MINUTES=1  # Realtime collection interval in minutes (default: 1)
COLLECTION_INTERVAL_HOURS=1    # Backup: hourly interval (currently unused)
AI_QUALITY_THRESHOLD=0.3

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
